<div class="row mx-auto d-flex justify-content-center">

        {{#each notas }}

            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title d-flex justify-content-between align-items-center">
                            {{title}} <a href="/notas/edit/{{_id}}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                        </h4>
                        <p>
                            {{description}}
                        </p>
                        <form action="/notas/delete/{{_id }}?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger btn-block btn-sm" type="submit">
                                Eliminar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            {{else}}


            <div class="card mx-auto">
                <div class="card-body">
                    <h1>Bienvenido, {{user.name}}</h1>
                    <p class="lead"> No hay notas a√∫n.</p>
                    <a href="/notas/add" class="btn btn-success btn-block">Crear una nota</a>
                </div>
            </div>

        {{/each}}

    </div>